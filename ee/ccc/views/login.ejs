<!DOCTYPE html>
<html>

<head>
    <link rel="icon" href="g360.png" type="image/png">

    <title>Login</title>
    <style>
       body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: url('pix1.png'); /* Set the background image */
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            image-rendering: pixelated;
            background-color: #b4b4b4; /* Fallback background color */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 400px;
            text-align: center;
            align-items: center;
            animation: fadeIn 0.2s ease-in-out;
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-10px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h2 {
            color: #333;
            
        }

        form {
            display: grid;
            grid-template-columns: 1fr;
            grid-gap: 10px;
        }

        label {
            color: #444;
            font-weight: bold;
            text-align: center;
            font-size: 14px;
            display: block;
            margin: 10px 0;
            align-items: left;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"],
        input[type="tel"] {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            width: 200px;
            padding: 12px;
            margin: 5px 0;
            border: none;
            border-radius: 10px;
            background-color: #ebedfd;
            color: #000000;
            outline: none;
            border-bottom: 0px solid #000000;
            transition: border-bottom 0.3s;
            position: relative;
            text-align: left;
        }

        input[type="text"]:focus,
        input[type="password"]:focus,
        input[type="email"]:focus,
        input[type="tel"]:focus {
            border-bottom: 3px solid #0a005f;
            transition: border-bottom 0.2s;
        }

        /* Custom Class for Line Animation */
        .line-animation {
            position: relative;
        }

        .line-animation::before {
            content: "";
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 100%;
            height: 2px;
            background-color: #2f015a;
            transform: scaleX(0);
            transform-origin: right;
            transition: transform 0.3s;
        }

        .line-animation:focus::before {
            transform: scaleX(1);
            transform-origin: left;
        }

        input[type="submit"] {
            background-color: #3f0fc4;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 7px;
            cursor: pointer;
            font-weight: 700;
        }

        .btn    {
            background-color: #3f0fc4;
             color: white; padding: 12px 30px; 
             border: none; border-radius: 7px;
              cursor: pointer; font-weight: 700; 
              text-align: center;
        
        }

        input[type="submit"]:hover {
            transition: ease-in-out 0.3s;
            background-color: #000000;
        }

        .error {
            color: red;
            text-align: left;
            grid-column: span 1;
        }

        .header1 {
            background-color: rgba(25, 25, 25, 0.79);
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            text-align: center;
            font-size: 25px;
            font-weight: bold;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>

<body>
    <div class="header1">
        <h1 style="color: #fff;">Governance 360Â°</h1>
    </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <div class="container">
        <h2>LOGIN <hr></h2>
        <form action="/login" method="post">
            <hr>
            <div>
                <label for="empid">Employee ID</label>
                <input type="text" id="empid" name="empid" placeholder="Enter your employee ID" required pattern="[0-9]+">
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
                <div class="error-container">
                    <span id="passwordError" class="error" style="color: red;"></span>
                </div>
            </div>
            <div>
                <input type="submit" value="Login">
            </div>
        </form>

        <br>
        <button class="btn" onclick="window.location.href='registration'">Registration</button>
        
        <!-- Display the error message here -->
        <% if (typeof error !== 'undefined') { %>
            <p class="error"><%= error %></p>
        <% } %>
    </div>

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        const empid = document.getElementById('empid').value;
        const password = document.getElementById('password').value;
        const empidPattern = /[0-9]+/;
        const empidInput = document.getElementById('empid');
        const empidError = document.getElementById('empidError');
        const passwordError = document.getElementById('passwordError');

        if (!empidPattern.test(empid)) {
            e.preventDefault();
            empidInput.classList.add('line-animation');
            empidError.textContent = 'Employee ID must contain only numeric values.';
            empidInput.focus();
        } else {
            empidInput.classList.remove('line-animation');
            empidError.textContent = '';
        }

        if (password.length < 8) {
            e.preventDefault();
            passwordError.textContent = 'Password must be at least 8 characters long.';
            document.getElementById('password').focus();
        } else {
            passwordError.textContent = '';
        }
    });
</script>

</body>

</html>

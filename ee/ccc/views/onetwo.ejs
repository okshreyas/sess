    }

    .arrow {
      display: inline-block;
      width: 0;
      height: 0;
      border-top: 10px solid transparent;
      border-bottom: 10px solid transparent;
      border-left: 10px solid #000; /* Right-pointing arrow */
      margin: 0 10px;
    }


     .history {
      background-color: #3498db;
      color: #fff;
      border-radius: 10px;
      font-size: 25px;
      text-decoration: none;
      padding: 10px 20px;
      width: 300px;
      font-weight: bold;
      
